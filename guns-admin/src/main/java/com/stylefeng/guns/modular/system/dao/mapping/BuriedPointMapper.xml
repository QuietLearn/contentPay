<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.stylefeng.guns.modular.system.dao.BuriedPointMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.stylefeng.guns.modular.system.model.BuriedPoint">
        <id column="id" property="id" />
        <result column="app_id" property="appId" />
        <result column="app_ver" property="appVer" />
        <result column="channel_id" property="channelId" />
        <result column="operator" property="operator" />
        <result column="address" property="address" />
        <result column="IMSI" property="imsi" />
        <result column="IMEI" property="imei" />
        <result column="point_id" property="pointId" />
        <result column="point_message" property="pointMessage" />
        <result column="pay_type" property="payType" />
        <result column="UUID" property="uuid" />
        <result column="is_del" property="isDel" />
        <result column="wifi_type" property="wifiType" />
        <result column="mobile" property="mobile" />
        <result column="ICCID" property="iccid" />
        <result column="phone_type" property="phoneType" />
        <result column="error_message" property="errorMessage" />
        <result column="point_type" property="pointType" />
        <result column="idfa" property="idfa" />
        <result column="open_UDID" property="openUdid" />
        <result column="gmt_created" property="gmtCreated" />
        <result column="gmt_modified" property="gmtModified" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, app_id, app_ver, channel_id, operator, address, IMSI, IMEI, point_id, point_message, pay_type, UUID, is_del, wifi_type, mobile, ICCID, phone_type, error_message, point_type, idfa, open_UDID, gmt_created, gmt_modified
    </sql>

    <select id="tree" resultType="com.stylefeng.guns.core.node.ZTreeNode">
        select id,pid as pId,simplename as name,
        (
        CASE
        WHEN (pId = 0 OR pId IS NULL) THEN
        'true'
        ELSE
        'false'
        END
        ) as isOpen from sys_dept
    </select>
</mapper>
