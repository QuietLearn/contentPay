<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.stylefeng.guns.modular.system.dao.FavoriteMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.stylefeng.guns.modular.system.model.Favorite">
        <id column="id" property="id" />
        <result column="type_id" property="typeId" />
        <result column="video_id" property="videoId" />
        <result column="video_name" property="videoName" />
        <result column="video_note" property="videoNote" />
        <result column="video_pic" property="videoPic" />
        <result column="video_actor" property="videoActor" />
        <result column="video_director" property="videoDirector" />
        <result column="video_publisharea" property="videoPublisharea" />
        <result column="video_publishyear" property="videoPublishyear" />
        <result column="member_id" property="memberId" />
        <result column="member_username" property="memberUsername" />
        <result column="sort" property="sort" />
        <result column="is_del" property="isDel" />
        <result column="gmt_created" property="gmtCreated" />
        <result column="gmt_modified" property="gmtModified" />
        <result column="appId" property="appId" />
        <result column="appVer" property="appVer" />
        <result column="channel" property="channel" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, type_id, video_id, video_name, video_note, video_pic, video_actor, video_director, video_publisharea, video_publishyear, member_id, member_username, sort, is_del, gmt_created, gmt_modified, appId, appVer, channel
    </sql>

    <select id="selectVideoIdsByMember" parameterType="int" resultType="int">
        select video_id
        from cps_favorite
        where member_id = #{memberId}
    </select>

    <delete id="deleteVideoIdsByMember" parameterType="map" >
        delete from cps_favorite
        where member_id =#{memberId}
        and video_id not in
        <foreach collection="vids" item="vid" open="(" separator="," close=")">
            #{vid}
        </foreach>
    </delete>
</mapper>
